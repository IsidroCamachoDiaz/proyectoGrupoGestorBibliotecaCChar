@model pruebaRazor.Models.ErrorViewModel
@{
    ViewData["Title"] = "index";
}

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Document</title>
	<link rel="stylesheet" href="~/css/style.css">
	<script src="https://kit.fontawesome.com/64d58efce2.js"></script>
</head>
<body>
	<div class="container" id="container">
		<div class="form-container sign-up-container" id="formRegister">
			<form action="#">
				<h1>Registrate</h1>
				<input type="text" placeholder="Nombre" />
				<input type="text" placeholder="Apellidos" />
				<input type="text" placeholder="DNI" />
				<input type="text" placeholder="Teléfono" />
				<input type="email" placeholder="Email" />
				<input type="password" placeholder="Contraseña" />
				<button>Enviar</button>
			</form>
		</div>
		<div class="form-container sign-in-container" id="formLogin">
			<form action="#">
				<h1>Inicia Sesión</h1>
				<input type="text" placeholder="DNI" />
				<input type="password" placeholder="Contraseña" />
				<a id="recupera" href="#">¿Has olvidado tu contraseña?</a>
				<button>Enviar</button>
			</form>
		</div>
		<div class="form-container recupera-container" id="formRecupera">
			<form action="#">
				<h1 style="margin-top: -20px; margin-bottom: 10px;">Recupera contraseña</h1>
				<input type="email" placeholder="Email" />
				<button style="margin-top: 10px;">Enviar</button>
			</form>
		</div>
		<div class="overlay-container">
			<div class="overlay">
				<div class="overlay-panel overlay-left" id="overlay-signin">
					<h1>¡Bienvenido!</h1>
					<p>Si ya tienes una cuenta, inicia sesión para acceder a tus recursos y servicios personalizados en la biblioteca.</p>
					<button class="ghost" id="signIn">Inicia Sesión</button>
				</div>
				<div class="overlay-panel overlay-right">
					<h1>¿No estás registrado?</h1>
					<p>Introduce tu información personal y empieza una nueva aventura con nosotros.</p>
					<button class="ghost" id="signUp">Registrate</button>
				</div>
				<div class="overlay-panel overlay-left-recupera" id="overlay-recupera">
					<h1>¿Has recordado la contraseña?</h1>
					<button class="ghost" id="signInRecupera" style="margin-top: 15px;">Inicia Sesión</button>
				</div>
			</div>
		</div>
	</div>
	<script src="~/css/js/main.js"></script>
</body>
</html>



